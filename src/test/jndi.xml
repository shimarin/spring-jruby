<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans">

	<bean name="dataSource" class="org.h2.jdbcx.JdbcDataSource">
		<property name="URL" value="jdbc:h2:mem:h2;DB_CLOSE_DELAY=-1"/>
	</bean>

	<bean id="jndi" class="org.apache.xbean.spring.jndi.DefaultContext">
	    <property name="entries">
	      <map>
	      	<entry key="java:comp/env/jdbc/spring-jruby">
	      		<ref bean="dataSource"/>
	      	</entry>
	      	<entry key="java:comp/env/mail/Session">
	      		<bean class="net.stbbs.xbean.spring.jndi.MailSessionFactoryBean">
	      			<property name="host" value="localhost"/>
	      		</bean>
	      	</entry>
	      </map>
	    </property>
	</bean>


</beans>
